<div class="table-responsive">
  <table class="table table-condensed h-padding">
    <thead>
      <tr>
        <th></th>
        <th><p>AM</p></th>
        <th><p>PM</p></th>
        <th><p>Eve</p></th>
      </tr>
    </thead>
    <tbody>

      {{#each @root.context.metaData.terms.availability.termGroups}}
      <tr>
        <th><p>{{capitalize label}}</p></th>
        {{#each this.terms}}
        <td>
          <div class="">
            <input type="checkbox" name="availability[]" class="checkbox" value="{{@key}}"{{#if (contains @root.request.params.query.availability @key)}} checked{{/if}}>
          </div>
        </td>
        {{/each}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>