{
  "name": "volunteering_search",
  "pattern": "/search",
  "debug": true,
  "errorRoute": "five_hundred",
  "metaData": {
    "title": "Find opportunities"
  },
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.getAccountInfo",
    {
      "name": "location_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "la_results",
            "index": "geo_lookup",
            "type": "es_district",
            "template": ">context.metaData.handlebars.queries.opportunities_local-authority-areas"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "search_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-legacy-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "detailed_results",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "milo-volunteering-opportunity",
            "template": ">context.metaData.handlebars.queries.opportunities_search-list"
          },
          {
            "name": "home_latest",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "milo-volunteering-opportunity",
            "template": ">context.metaData.handlebars.queries.opportunities_home-latest"
          }
        ]
      },
      "renderer": "handlebars"
    },
    "context.metaData.commonTasks.volunteeringTermsMaps",
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.opportunity_search-head-tags",
              "body": ">context.metaData.handlebars.templates.opportunity_search",
              "foot": ">context.metaData.handlebars.templates.opportunity_search-foot",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}